@inject StateManager StateManager
@inject NavigationManager Navigation

<PageTitle>Base de Conhecimento - SynQcore</PageTitle>

<h1>Base de Conhecimento</h1>

@if (!StateManager.User.IsAuthenticated)
{
    <p>VocÃª precisa estar autenticado.</p>
    <button @onclick='@(() => Navigation.NavigateTo("/login"))'>Fazer Login</button>
}
else
{
    <div>
        <button @onclick='@(() => Navigation.NavigateTo("/knowledge/create"))'>Novo Artigo</button>
        <button @onclick='@(() => Navigation.NavigateTo("/knowledge/categories"))'>Categorias</button>
    </div>

    <section>
