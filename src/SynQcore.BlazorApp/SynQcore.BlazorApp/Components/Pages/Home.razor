    }

    .mockup-header {
        background: #f8f9ff;
        padding: 1rem;
        border-bottom: 1px solid #e5e7eb;
        display: flex;
        align-items: center;
    }

    .mockup-dots {
        display: flex;
        gap: 0.5rem;
    }

    .mockup-dots span {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: #d1d5db;
    }

    .mockup-dots span:first-child { background: #ef4444; }
    .mockup-dots span:nth-child(2) { background: #f59e0b; }
    .mockup-dots span:last-child { background: #10b981; }

    .mockup-content {
        padding: 1.5rem;
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 1rem;
        min-height: 300px;
    }

    .mockup-sidebar {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 12px;
        opacity: 0.8;
    }

    .mockup-main {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

