        height: 150px;
        top: 60%;
        left: 80%;
        animation-delay: 2s;
    }

    .shape-3 {
        width: 80px;
        height: 80px;
        top: 10%;
        right: 20%;
        animation-delay: 4s;
    }

    .shape-4 {
        width: 120px;
        height: 120px;
        bottom: 20%;
        left: 15%;
        animation-delay: 1s;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(180deg); }
