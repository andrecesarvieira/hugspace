        background: #f1f5f9;
        border-radius: 8px;
        height: 80px;
        animation: pulse 2s ease-in-out infinite;
    }

    .mockup-card:nth-child(2) { animation-delay: 0.5s; }
    .mockup-card:nth-child(3) { animation-delay: 1s; }

    @@keyframes pulse {
