@page "/employees/create"
@rendermode InteractiveServer
@using SynQcore.BlazorApp.Services.StateManagement
@inject StateManager StateManager
@inject NavigationManager Navigation

<PageTitle>Novo Colaborador - SynQcore</PageTitle>

<h1>Novo Colaborador</h1>

<form @onsubmit="HandleSubmit">
    <div>
        <label>Nome:</label>
        <input type="text" @bind="nome" required />
    </div>
    
    <div>
        <label>Email:</label>
        <input type="email" @bind="email" required />
    </div>
    
    <div>
        <label>Cargo:</label>
        <input type="text" @bind="cargo" required />
    </div>
    
    <button type="submit">Salvar</button>
    <button type="button" @onclick='@(() => Navigation.NavigateTo("/employees"))'>Cancelar</button>
</form>

@code {
    private string nome = "";
    private string email = "";
    private string cargo = "";

    private void HandleSubmit()
    {
        // Implementar
    }
}
