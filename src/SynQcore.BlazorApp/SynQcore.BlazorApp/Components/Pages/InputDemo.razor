@page "/input-demo"
@rendermode InteractiveServer

<h3>🎯 SynQInput - Demo</h3>

<div style="max-width: 600px; margin: 2rem auto; padding: 2rem;">
    <h4>Exemplos Básicos</h4>

    <SynQInput @bind-Value="textValue1" Label="Nome Completo" Placeholder="Digite seu nome" />

    <SynQInput @bind-Value="textValue2" Label="E-mail" Placeholder="seuemail@exemplo.com" Type="email" />

    <SynQInput @bind-Value="textValue3" Label="Senha" Placeholder="Digite sua senha" Type="password" />

    <SynQInput @bind-Value="textValue4" Label="Campo Desabilitado" Placeholder="Campo desabilitado" Disabled="true" />

    <SynQInput @bind-Value="textValue5" Label="Campo com Erro" Placeholder="Digite algo"
        ErrorMessage="Este campo é obrigatório" />

    <SynQInput @bind-Value="textValue6" Label="Campo com Ajuda" Placeholder="Digite algo"
        HelperText="Este é um texto de ajuda" />

    <hr style="margin: 2rem 0;" />

    <h4>Valores Atuais:</h4>
    <ul>
        <li><strong>Nome:</strong> @textValue1</li>
        <li><strong>E-mail:</strong> @textValue2</li>
        <li><strong>Senha:</strong> @(string.IsNullOrEmpty(textValue3) ? "Vazio" : "●●●●●●")</li>
        <li><strong>Erro:</strong> @textValue5</li>
        <li><strong>Ajuda:</strong> @textValue6</li>
    </ul>
</div>

@code {
    private string? textValue1;
    private string? textValue2;
    private string? textValue3;
    private string? textValue4;
    private string? textValue5;
    private string? textValue6;
}
