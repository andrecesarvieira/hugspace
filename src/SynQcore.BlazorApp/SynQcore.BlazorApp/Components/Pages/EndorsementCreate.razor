@page "/endorsements/create"
@rendermode InteractiveServer
@using SynQcore.BlazorApp.Services.StateManagement
@inject StateManager StateManager
@inject NavigationManager Navigation

<PageTitle>Criar Reconhecimento - SynQcore</PageTitle>

<h1>Criar Reconhecimento</h1>

<form @onsubmit="HandleSubmit">
    <div>
        <label>Colaborador:</label>
        <input type="text" @bind="employeeName" required />
    </div>
    
    <div>
        <label>Mensagem:</label>
        <textarea @bind="message" rows="4" required></textarea>
    </div>
    
    <button type="submit">Enviar</button>
    <button type="button" @onclick='@(() => Navigation.NavigateTo("/endorsements"))'>Cancelar</button>
</form>

