@page "/dashboard"
@rendermode InteractiveServer
@using SynQcore.BlazorApp.Services
@using SynQcore.BlazorApp.Services.StateManagement
@inject StateManager StateManager
@inject NavigationManager Navigation

<PageTitle>Dashboard - SynQcore</PageTitle>

<h1>Dashboard Corporativo</h1>

@if (StateManager.User.IsAuthenticated)
{
    <section>
        <h2>Bem-vindo, @StateManager.User.Nome!</h2>
        <p>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
        
        <div>
            <button @onclick='@(() => Navigation.NavigateTo("/search"))'>Buscar</button>
            <button @onclick='@(() => Navigation.NavigateTo("/feed"))'>Novo Post</button>
        </div>
    </section>

    <section>
        <h2>Estatísticas</h2>
        <div>
            <article>
                <h3>Colaboradores</h3>
                <p>0</p>
            </article>
            <article>
                <h3>Posts</h3>
                <p>0</p>
            </article>
            <article>
                <h3>Documentos</h3>
                <p>0</p>
            </article>
        </div>
    </section>

    <section>
        <h2>Atividades Recentes</h2>
        <p>Nenhuma atividade recente.</p>
    </section>
}
else
{
    <p>Você precisa estar autenticado para ver o dashboard.</p>
    <button @onclick='@(() => Navigation.NavigateTo("/login"))'>Fazer Login</button>
}
