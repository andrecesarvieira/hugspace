@page "/dashboard"
@rendermode InteractiveServer
@using SynQcore.BlazorApp.Services
@using SynQcore.BlazorApp.Services.StateManagement
@inject StateManager StateManager
@inject NavigationManager Navigation

<PageTitle>Dashboard - SynQcore</PageTitle>

<div class="container">
    @if (StateManager.User.IsAuthenticated)
    {
        <div class="card mb-6">
            <div class="card-body">
                <h1 class="text-3xl font-bold mb-2">Bem-vindo, @StateManager.User.CurrentUser?.Nome!</h1>
                <p class="text-gray-600">@DateTime.Now.ToString("dd 'de' MMMM 'de' yyyy 'às' HH:mm", new System.Globalization.CultureInfo("pt-BR"))</p>
                
                <div class="flex gap-4 mt-6">
                    <button @onclick='@(() => Navigation.NavigateTo("/search"))' class="btn btn-primary">
                        Buscar
                    </button>
                    <button @onclick='@(() => Navigation.NavigateTo("/feed"))' class="btn btn-success">
                        Novo Post
                    </button>
                </div>
            </div>
        </div>

        <div class="mb-6">
            <h2 class="text-2xl font-bold mb-4">Estatísticas</h2>
            <div class="grid grid-cols-1 grid-cols-md-3 gap-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h3 class="text-xl font-bold text-primary mb-2">Colaboradores</h3>
                        <p class="text-4xl font-bold text-gray-700">0</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body text-center">
                        <h3 class="text-xl font-bold text-success mb-2">Posts</h3>
                        <p class="text-4xl font-bold text-gray-700">0</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body text-center">
                        <h3 class="text-xl font-bold text-warning mb-2">Documentos</h3>
                        <p class="text-4xl font-bold text-gray-700">0</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h2 class="text-xl font-bold">Atividades Recentes</h2>
            </div>
            <div class="card-body">
                <p class="text-gray-600">Nenhuma atividade recente.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center">
                <h1 class="text-2xl font-bold mb-4">Dashboard Corporativo</h1>
                <p class="mb-6">Você precisa estar autenticado para ver o dashboard.</p>
                <button @onclick='@(() => Navigation.NavigateTo("/login"))' class="btn btn-primary">
                    Fazer Login
                </button>
            </div>
        </div>
    }
</div>
