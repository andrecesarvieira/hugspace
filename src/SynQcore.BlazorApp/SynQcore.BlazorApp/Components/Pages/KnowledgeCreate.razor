@page "/knowledge/create"
@rendermode InteractiveServer
@using SynQcore.BlazorApp.Services.StateManagement
@inject StateManager StateManager
@inject NavigationManager Navigation

<PageTitle>Criar Artigo - SynQcore</PageTitle>

<h1>Criar Artigo</h1>

<form @onsubmit="HandleSubmit">
    <div>
        <label>Título:</label>
        <input type="text" @bind="title" required />
    </div>
    
    <div>
        <label>Conteúdo:</label>
        <textarea @bind="content" rows="10" required></textarea>
    </div>
    
    <button type="submit">Salvar</button>
    <button type="button" @onclick='@(() => Navigation.NavigateTo("/knowledge"))'>Cancelar</button>
</form>

@code {
    private string title = "";
    private string content = "";

