@code {
    private PlatformStatsDto? stats;

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to state changes
        StateManager.User.PropertyChanged += OnStateChanged;

        // Load stats only if authenticated
        if (StateManager.User.IsAuthenticated)
        {
            await LoadStats();
        }
    }

    private async Task LoadStats()
    {
        try
        {
            stats = await PlatformStatsService.GetPlatformStatsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar estat√≠sticas: {ex.Message}");
            // Fallback to mock data
            stats = new PlatformStatsDto
            {
                TotalEmployees = 2543,
                TotalPosts = 18934,
                TotalDocuments = 5672,
                TotalComments = 12450
            };
        }
    }

    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/login");
    }

    private void NavigateToFeed()
    {
        Navigation.NavigateTo("/feed");
    }

    private void NavigateToDashboard()
    {
        Navigation.NavigateTo("/dashboard");
    }

    private void OnStateChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        InvokeAsync(async () =>
        {
            if (e.PropertyName == "IsAuthenticated" && StateManager.User.IsAuthenticated)
            {
                await LoadStats();
            }
            StateHasChanged();
        });
    }

    public void Dispose()
    {
        StateManager.User.PropertyChanged -= OnStateChanged;
    }
}