{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;Database=SynQcore;Username=postgres;Password=postgres123;",
    "Redis": "localhost:6379"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "IpWhitelist": [ "127.0.0.1", "::1" ],
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h", 
        "Limit": 1000
      }
    ]
  },
  "ClientRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "ClientIdHeader": "X-ClientId",
    "ClientWhitelist": [ "admin-client", "monitoring-client" ],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 200
      }
    ],
    "ClientRules": [
      {
        "ClientId": "employee-app",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 100
          },
          {
            "Endpoint": "*",
            "Period": "1h",
            "Limit": 1000
          }
        ]
      },
      {
        "ClientId": "manager-app", 
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 300
          },
          {
            "Endpoint": "*",
            "Period": "1h", 
            "Limit": 5000
          }
        ]
      },
      {
        "ClientId": "hr-app",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 500
          },
          {
            "Endpoint": "*",
            "Period": "1h",
            "Limit": 10000
          }
        ]
      },
      {
        "ClientId": "admin-app",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 1000
          },
          {
            "Endpoint": "*",
            "Period": "1h",
            "Limit": 50000
          }
        ]
      }
    ]
  }
}
